CC = gcc
INCLUDES = -I../emulator -I../data
CFLAGS = -g -Wall -Wextra -Wshadow $(INCLUDES)
LDFLAGS = 

UNAME_S := $(shell uname -s)
ifeq ($(UNAME_S), Darwin)
    LDFLAGS += -framework AudioToolbox -framework CoreFoundation -framework ApplicationServices -pthread
endif

paint-cursor: paint-cursor.o
	$(CC) $(CFLAGS) $(LDFLAGS) -o paint-cursor paint-cursor.o

paint-cursor.o: paint-cursor.c ../emulator/*
	$(CC) $(CFLAGS) -c paint-cursor.c

clean:
	rm -f *.o paint-cursor *.exe

.PHONY: clean
