CC = gcc
INCLUDES = -I../emulator -I../data
CFLAGS = -g -Wall -Wextra -Wshadow $(INCLUDES)
LDFLAGS = 

UNAME_S := $(shell uname -s)
ifeq ($(UNAME_S), Darwin)
    LDFLAGS += -framework AudioToolbox -framework CoreFoundation -framework ApplicationServices
endif

paint64: paint64.o
	$(CC) $(CFLAGS) $(LDFLAGS) -o paint64 paint64.o

paint64.o: paint64.c ../emulator/*
	$(CC) $(CFLAGS) -c paint64.c

clean:
	rm -f *.o paint64 *.exe

.PHONY: clean
